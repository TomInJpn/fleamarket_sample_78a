.Wrapper
  = render "header"

  .Main
    .Main__title
      住所情報入力
    .Main__form
      = form_for @contact_information do |f|
        = render "devise/shared/error_messages", resource: @contact_information
        .Main__form__field__name
          .Main__form__field__name__destination-family
            = f.label :destination_family_name, "送り先氏名", class: 'label'
            = f.label "必須", class: 'must'
            %br/
            = f.text_field :destination_family_name, autofocus: true, :placeholder => "例)振間", class:'destination_family-name'
          .Main__form__field__name__destination-first
            %br/
            = f.text_field :destination_first_name, :placeholder => "例)太朗", class:'destination_first-name'
        .Main__form__field__name
          .Main__form__field__name__kana-family
            = f.label :destination_family_name_kana, "送り先氏名カナ", class: 'label'
            = f.label "必須", class: 'must'
            %br/
            = f.text_field :destination_family_name_kana, :placeholder => "例)フリマ", class:'destination_family-name-kana'
          .Main__form__field__name__kana-first
            %br/
            = f.text_field :destination_first_name_kana, :placeholder => "例)タロウ", class:'destination_first-name-kana'
        .Main__form__field
          = f.label :post_code, "郵便番号", class: 'label'
          = f.label "必須", class: 'must'
          %br/
          = f.text_field :post_code, class:'post-code', :placeholder => "例)0000000"
        .Main__form__field
          = f.label :都道府県, class:'label'
          = f.label "必須", class: 'must'
          %br/
          = f.collection_select :prefecture_id, Prefecture.all, :id, :name, {prompt: "--"}, {class: 'prefecture'}
        .Main__form__field
          = f.label :city, "市区町村", class: 'label'
          = f.label "必須", class: 'must'
          %br/
          = f.text_field :city, class:'city', :placeholder => "例)振間市"
        .Main__form__field
          = f.label :house_number, "番地", class: 'label'
          = f.label "必須", class: 'must'
          %br/
          = f.text_field :house_number, class:'house-number', :placeholder => "例)０番地０ー０"
        .Main__form__field
          = f.label :building_name, "建物名", class: 'label'
          %br/
          = f.text_field :building_name, class:'building-name', :placeholder => "フリマビルディング 1234号室"
        .Main__form__field
          = f.label :phone_number, "電話番号", class: 'label'
          %br/
          = f.text_field :phone_number, class:'phone-number', :placeholder => "例)00000000000"
        .Main__form__actions
          = f.submit "登録", class:'button'

  = render "footer"
